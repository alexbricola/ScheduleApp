{
  "compilerOptions": {
    /* 基础设置 */
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],

    /* 路径解析 */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* 输出与类型支持 */
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*", "env.d.ts"],
  "exclude": ["node_modules"]
}
